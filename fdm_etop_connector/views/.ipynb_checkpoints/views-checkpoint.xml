<odoo>
  <data>
        <record id="view_button_call_balance" model="ir.ui.view">
            <field name="name">Bp bouton appel balance</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='operations']/field" position="before">
                    <style>.o_list_button { text-align:center }</style>
                </xpath>
                <xpath expr="//page[@name='operations']/field/tree//button[@name='action_show_details']" position="before">
                    <button name="action_call_balance" class="btn btn-primary" type="object" string="Confirmer"/>
                </xpath>
            </field>
        </record>
  </data>
</odoo>